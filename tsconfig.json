{
  "compilerOptions": {


       /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,


      /* Strictness */
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

        /* Bundled projects */

    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    
    /* Path Aliases */
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "next.config.mjs",
    "env.d.ts" ,   ".eslintrc.cjs",
],
  "exclude": ["node_modules", "tsconfig.json"]
}
